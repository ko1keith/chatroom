<div class="container">

</div>

<h1 class="ui center aligned header"> Sign up to enter the Chatroom </h1>

<div class="ui segment">
    <%= form_with(model: @user, local: true, class:"ui form") do |f| %>
    
        <div class="ui two column center aligned grid">

            
            <div class="middle aligned row">
                <div class="column">
                    <div class="field">
                        <%=f.label :username, class:"label" %>
                        <%=f.text_field :username,  placeholder: "Enter a username"%>
                    </div>
                    <div class=" field">
                        <%= f.label :password, class: "label" %>
                        <%= f.text_field :password, placeholder:"Endet a password"%>
                    </div>
                </div>

                <div class="column">
                    <%= f.submit "Signup", class:"ui button"%>
                </div>
                    
                
            </div>
            
            
            
        </div>
    <% end %>
</div>
